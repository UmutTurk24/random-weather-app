{{#section 'head'}}
  <style>
    .weatherWidget {
      border: solid 1px blue;
      margin: 4px;
      padding: 4px;
    }
  </style>
{{/section}}

<div class="weather_widget">
  {{#each partials.weather_context}}
    <div class="location">
      <h3>{{location.name}}</h3>
      <a href="{{location.forecastUrl}}">
        <img src="{{iconUrl}}" alt="{{weather}}">
        {{weather}}, {{temp}}
      </a>
    </div>
  {{/each}}
  <small>Source: <a href="https://openweathermap.org">OpenWeatherMap</a></small>
</div>
